<?xml version="1.0" encoding="UTF-8" ?>
 
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>

    <definition name="search" preparer="genres"  template="/WEB-INF/templates/user/search.jsp" ></definition>
    
    <definition name="user-header"   template="/WEB-INF/templates/user/user-header-template.jsp">
        <put-attribute name="search"  value="search"/>
        <put-attribute name="usermenu" value="/WEB-INF/templates/user/usermenu.jsp"/>
    </definition>
    
    <definition name="base-template" template="/WEB-INF/templates/base-template.jsp">
        
        <put-attribute name="header" value="" />
        
        <put-attribute name="footer" value="/WEB-INF/templates/footer.jsp" />
    </definition>

    <definition name="books"  extends="base-template">
        
        <put-attribute name="header" value="user-header" />
        
        <put-attribute name="content" value="/WEB-INF/templates/layouts/books.jsp" />
        
    </definition>
</tiles-definitions>
